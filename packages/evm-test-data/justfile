default:
  @just --list

set dotenv-load
set fallback

export RUST_LOG := "debug"

generate-transactions rollupName networkId:
    forge script script/DeployAndCallERC20.s.sol:DeployAndCallERC20 \
        --optimizer-runs 2 \
        --private-key $PRIVATE_KEY \
        --rpc-url http://executor.{{ rollupName }}.localdev.me \
        --chain-id {{ networkId }} \
        --slow \
        --broadcast --skip-simulation -vvvvv

generate-transactions-custom-priv-key rollupName networkId privKey:
    forge script script/DeployAndCallERC20.s.sol:DeployAndCallERC20 \
        --optimizer-runs 2 \
        --private-key {{ privKey }} \
        --rpc-url http://executor.{{ rollupName }}.localdev.me \
        --chain-id {{ networkId }} \
        --slow \
        --broadcast --skip-simulation -vvvvv
